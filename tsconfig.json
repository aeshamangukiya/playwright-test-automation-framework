{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "@playwright/test"
    ],
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@specs/*": [
        "specs/*"
      ]
    }
  },
  "include": [
    "config",
    "lib",
    "specs"
  ]
}